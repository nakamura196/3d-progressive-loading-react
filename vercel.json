{
  "functions": {
    "api/data/[...path].js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/data/manifests/:path*",
      "destination": "/data/manifests/:path*"
    },
    {
      "source": "/data/models/:path*", 
      "destination": "/data/models/:path*"
    },
    {
      "source": "/data/(.*)",
      "destination": "/api/data/[...path]"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/data/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*).glb",
      "headers": [
        {
          "key": "Content-Type",
          "value": "model/gltf-binary"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*).json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    }
  ],
  "trailingSlash": false
}